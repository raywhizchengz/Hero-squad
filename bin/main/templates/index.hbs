{{#partial "content"}}

    <div class="container-fluid" id="welcome">
        <h1>FULFILL YOUR FANTASIES HERE.</h1>
        <h2>Welcome to the exciting world MARVEL HEROES. </h2>
    </div>


        <div class="row">

            <div class="col-md-6">
                <h3 >Squads Available:</h3>
                <ul >
                {{#if squads}}
                    {{#each squads}}
                        <li>{{name}}</li>
                        <li>{{maxSize}}</li>
                                        <!--<li><a href="/squadId/{{id}}">{{name}}</a></li>-->
                    {{/each}}
                {{/if}}

                </ul>
            </div>

            <div class="col-md-6">
                <h3 >Available Heroes:</h3>
                <ul >
                    {{#each heroes}}
                        <li><a href="/heroInfo/{{id}}">{{name}}</a></li>
                    {{/each}}
                </ul>

            </div>
        </div>

        <h3><u>What brings you here: </u></h3>
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/heroes/new" style="color:Red"; class="btn btn-outline-dark btn-lg">Create A Hero</a>
            </div>
            <div class="col-md-6">
                <a href="/posts/squads/new" style="color:Red"; class="btn btn-outline-dark btn-lg">Create A Squad</a>
            </div>

        </div>

    </div>




{{/partial}}
{{>layout.hbs}}